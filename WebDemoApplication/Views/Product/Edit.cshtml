@model WebDemoApplication.Models.Dtos.ProductDto
@{
}

<div>
    <h2 class="text-center mb-5">Edit Balls</h2>

    <form method="post" enctype="multipart/form-data">
        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Id</label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="Id" value="@ViewData["BallId"]" />
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Name</label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Price</label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="Price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="offset-sm-4 col-sm-8">
                <img src="/Image/@ViewData["ImageFileName"]" width="150" />
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">ImageFile</label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="ImageFile" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="offset-sm-4 col-sm-4 d-grid">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            <div class="col-sm-4 d-grid">
                <a class="btn btn-outline-primary" asp-controller="Balls"
                   asp-action="Index" role="button">Cancel</a>
            </div>
        </div>
    </form>
</div>