@model List<WebDemoApplication.Models.Dtos.OrderDto>

@{
}

<h2>Shopping Order</h2>

<table class="table">
    <thead>
        <tr>
            <th>OrderId</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            @* <th>Total</th>
            <th>Actions</th> *@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrderId</td>
                <td>@item.ProductName</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                @* <td>@(item.Product.Price * item.Quantity)</td> *@
                @* <td>
                    <form asp-action="RemoveFromCart" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                </td> *@
            </tr>
        }
    </tbody>
</table>

